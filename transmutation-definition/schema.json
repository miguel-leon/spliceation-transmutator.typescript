{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/miguel-leon/spliceation-transmutator.typescript",
  "title": "Transmutation",
  "description": "Transmutation clauses definition",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "definition": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/clause"
      }
    }
  },
  "required": ["$schema", "definition"],
  "definitions": {
    "clause": {
      "oneOf": [
        {
          "$ref": "#/definitions/single-clause"
        },
        {
          "$ref": "#/definitions/multi-clause"
        }
      ]
    },
    "single-clause": {
      "type": "object",
      "additionalProperties": false,
      "required": ["class", "match"],
      "properties": {
        "class": {
          "type": "string"
        },
        "match": {
          "oneOf": [
            {
              "type": "string",
              "format": "regex"
            }, {
              "type": "array",
              "items": {
                "type": "string",
                "format": "regex"
              }
            }
          ]
        },
        "recursion": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/clause"
              }
            }
          ]
        },
        "multiline": {
          "type": "boolean"
        }
      }
    },
    "multi-clause": {
      "type": "object",
      "additionalProperties": false,
      "required": ["concurrent"],
      "properties": {
        "concurrent": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/single-clause"
          }
        }
      }
    }
  }
}
